generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  email String @unique
  password String
  firstName String
  lastName String
  role Role @default(CLIENT)
  event event[]
}

model event{
  id String @id @default(uuid())
  eventName String
  host User[]
  updatedAt DateTime @default(now())
  start DateTime 
  end DateTime
}

enum Role{
  ADMIN
  CLIENT
}
